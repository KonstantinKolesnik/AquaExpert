<UserControl
    x:Class="SmartHub.UWP.Plugins.Wemos.UI.Controls.ucMonitorsList"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SmartHub.UWP.Plugins.Wemos.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <CollectionViewSource x:Name="itemsViewSource"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ContentDialog
            x:Name="dlgAddMonitor"
            VerticalAlignment="Stretch"
            PrimaryButtonText="{Binding Labels.OK, Source={StaticResource LabelsManager}}"
            SecondaryButtonText="{Binding Labels.Cancel, Source={StaticResource LabelsManager}}"
            IsPrimaryButtonEnabled="{Binding Text, ElementName=tbMonitorName, Mode=OneWay, Converter={StaticResource StringToBooleanConverter}}">
            <StackPanel>
                <TextBox
                    x:Name="tbMonitorName"
                    Header="{Binding Labels.Name, Source={StaticResource LabelsManager}}"
                    HorizontalAlignment="Stretch"
                    Margin="{StaticResource PropertyNameValueVerticalBlockMargin}"/>
                <ComboBox
                    x:Name="cbLines"
                    Header="{Binding Labels.Line, Source={StaticResource LabelsManager}}"
                    HorizontalAlignment="Stretch"
                    Margin="{StaticResource PropertyNameValueVerticalBlockMargin}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>
        </ContentDialog>

        <TextBlock x:Name="tbEmptyContent" Text="{Binding Labels.NoData, Source={StaticResource LabelsManager}}" Style="{StaticResource EmptyListTextBlockStyle}"/>

        <ListView
            x:Name="lvMonitors"
            ItemsSource="{Binding Source={StaticResource itemsViewSource}}"
            ItemContainerStyle="{StaticResource ListViewItemContainerStyle}"
            SelectionMode="None"
            IsItemClickEnabled="True"
            IsSwipeEnabled="False"
            ItemClick="lvMonitors_ItemClick">
            <ListView.GroupStyle>
                <GroupStyle HidesIfEmpty="True" HeaderTemplate="{StaticResource ListGroupHeaderTemplate}"/>
            </ListView.GroupStyle>
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <ItemsStackPanel Orientation="Vertical"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderThickness="{StaticResource ListItemSeparatorThickness}" BorderBrush="{StaticResource ListItemSeparatorBrush}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <FontIcon FontFamily="Segoe MDL2 Assets" FontSize="32" Glyph="&#xE9D9;" Margin="0,0,15,0" VerticalAlignment="Center"/>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{Binding Name}" Style="{ThemeResource ListItemTitleStyle}"/>
                                <TextBlock Text="{Binding NameForInformer}" Style="{ThemeResource ListItemSubtitleStyle}" Visibility="{Binding NameForInformer, Converter={StaticResource NotNullToVisibilityConverter}}"/>
                            </StackPanel>
                            <TextBlock Grid.Column="2" Text="{Binding LineName}" Style="{ThemeResource ListItemTitleStyle}" Foreground="{ThemeResource InactiveBrush}" VerticalAlignment="Center"/>
                            <AppBarButton Grid.Column="3" Style="{StaticResource AppBarTinyButton}" Tag="{Binding ID}" Margin="15,0,0,0" Click="ButtonDelete_Click">
                                <AppBarButton.Icon>
                                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE107;"/>
                                </AppBarButton.Icon>
                            </AppBarButton>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <CommandBar Grid.Row="1">
            <CommandBar.PrimaryCommands>
                <AppBarButton Label="{Binding Labels.Add, Source={StaticResource LabelsManager}}" Click="ButtonAdd_Click">
                    <AppBarButton.Icon>
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE109;"/>
                    </AppBarButton.Icon>
                </AppBarButton>
            </CommandBar.PrimaryCommands>
        </CommandBar>
    </Grid>
</UserControl>
