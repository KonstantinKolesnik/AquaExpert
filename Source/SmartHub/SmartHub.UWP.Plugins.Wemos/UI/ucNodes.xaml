<UserControl
    x:Class="SmartHub.UWP.Plugins.Wemos.UI.ucNodes"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SmartHub.UWP.Plugins.Wemos.UI"
    xmlns:telerikGrid="using:Telerik.UI.Xaml.Controls.Grid"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Loaded="UserControl_Loaded">

    <telerikGrid:RadDataGrid
        ItemsSource="{Binding Nodes}"
        AutoGenerateColumns="False"
        UserEditMode="Inline"
        SelectionMode="Single"
        SelectionUnit="Cell">
        <telerikGrid:RadDataGrid.Columns>
            <telerikGrid:DataGridNumericalColumn PropertyName="NodeID" Header="ID" CanUserEdit="False" SizeMode="Auto"/>
            <telerikGrid:DataGridTextColumn PropertyName="Name" Header="{Binding Labels.Name, Source={StaticResource LabelsManager}}" CanUserEdit="True"/>
            <telerikGrid:DataGridTextColumn PropertyName="Type" Header="{Binding Labels.Type, Source={StaticResource LabelsManager}}" CanUserEdit="False" SizeMode="Auto"/>
            <telerikGrid:DataGridTextColumn PropertyName="ProtocolVersion" Header="{Binding Labels.ProtocolVersion, Source={StaticResource LabelsManager}}" CellContentFormat="{}{0:N1}" CanUserEdit="False" SizeMode="Auto"/>
            <telerikGrid:DataGridTextColumn PropertyName="IPAddress" Header="{Binding Labels.IPAddress, Source={StaticResource LabelsManager}}" CanUserEdit="False" SizeMode="Auto"/>
            <telerikGrid:DataGridTextColumn PropertyName="FirmwareName" Header="{Binding Labels.FirmwareName, Source={StaticResource LabelsManager}}" CanUserEdit="False" SizeMode="Auto"/>
            <telerikGrid:DataGridTextColumn PropertyName="FirmwareVersion" Header="{Binding Labels.FirmwareVersion, Source={StaticResource LabelsManager}}" CellContentFormat="{}{0:N1}" CanUserEdit="False" SizeMode="Auto"/>
            <telerikGrid:DataGridTextColumn PropertyName="LastTimeStamp" Header="{Binding Labels.TimeStamp, Source={StaticResource LabelsManager}}" CanUserEdit="False" SizeMode="Auto"/>
            <telerikGrid:DataGridTextColumn PropertyName="LastBatteryValue" Header="{Binding Labels.Battery, Source={StaticResource LabelsManager}}" CellContentFormat="{}{0}%" CanUserEdit="False" SizeMode="Auto"/>
        </telerikGrid:RadDataGrid.Columns>
        <telerikGrid:RadDataGrid.Commands>
            <local:NodeCommitEditCommand/>
        </telerikGrid:RadDataGrid.Commands>
    </telerikGrid:RadDataGrid>
</UserControl>
