<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:telerikPrimatives="using:Telerik.UI.Xaml.Controls.Primitives"
    xmlns:core="using:SmartHub.UWP.Core"
    xmlns:strings="using:SmartHub.UWP.Core.StringResources"
    xmlns:vc="using:SmartHub.UWP.Core.Xaml.ValueConverters">

    <core:AppManager x:Key="AppManager"/>
    <strings:LabelsManager x:Key="LabelsManager"/>

    <!-- Busy indicator -->
    <Style TargetType="telerikPrimatives:RadBusyIndicator">
        <!--<Setter Property="AnimationStyle" Value="AnimationStyle8"/>-->
        <Setter Property="AnimationStyle" Value="AnimationStyle7"/>
        <Setter Property="Content" Value=""/>
    </Style>

    <vc:StringToUpperStringConverter x:Key="StringToUpperStringConverter"/>
    <vc:StringToBooleanConverter x:Key="StringToBooleanConverter"/>
    <vc:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
    <vc:StringFormatConverter x:Key="StringFormatConverter"/>
    <vc:NotNullToVisibilityConverter x:Key="NotNullToVisibilityConverter"/>
    <vc:NotNullToInvisibilityConverter x:Key="NotNullToInvisibilityConverter"/>
    <vc:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    <vc:BooleanToInvisibilityConverter x:Key="BooleanToInvisibilityConverter"/>

    <vc:SizeToPropertyNameStyleConverter x:Key="SizeToPropertyNameStyleConverter"/>
    <vc:SizeToPropertyValueHStyleConverter x:Key="SizeToPropertyValueHStyleConverter"/>
    <vc:SizeToPropertyValueVStyleConverter x:Key="SizeToPropertyValueVStyleConverter"/>

    <vc:LocalizationConverter x:Key="LC"/>
</ResourceDictionary>
